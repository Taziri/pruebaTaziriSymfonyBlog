{% extends 'base.html.twig' %}

{% block body %}
    {% for post in posts %}
        <div class="card" style="width: 100%;">
            <div class="card-body">
                <h5 class="card-title">{{ post.title }}</h5>
                <p class="card-text">{{ post.title }}</p>
                <a href="{{path('post_show',{'id': post.id})}}" class="btn btn-primary button-show-post">Show</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}